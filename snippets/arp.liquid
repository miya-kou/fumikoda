<style>
  #awarp-product-related,
  #awarp-shopping-cart-related,
  #awarp-recently-viewed-products{
    clear:both;
  }
  .arp-overlay {
    visibility: hidden;
    opacity: 0;
  }
</style>
<link href="https://cdn.apps1.exto.io/arp/css/arp.4.3.7.min.css" rel="stylesheet">

<div id="exto-arp" class="page-width" style="display: block" data-template="{{ template.name }}{% if template.name == 'page' %}.{{ handle }}{% endif %}" data-product="{{ product.id }}" data-cart-currency="{{ cart.currency.iso_code }}" data-store-currency="{{ shop.currency }}" data-cart-original-total-price-cents="{{ cart.original_total_price }}" data-cart-item-count="{{ cart.item_count }}" data-cart-products="{{ cart.items | map: "product_id" | join: "," }}" data-cart-items="{% for item in cart.items %}{{ item.product_id }}-{{ item.variant_id }}x{{ item.quantity }},{% endfor %}" data-collection="{{ collection.id }}" {% assign arps='all,all-products,best-sellers,best-selling-products,cross-sell-application,frontpage,front-page,featured,featured-products,featured-collection,free-shipping,flash-sale,homepage,home-page,inventory_notifications,in-stock,just-in,low-stock-products,low-stock-products-all-products,new,new-arrivals,new-arrival,new-in,new-products,newest-products,on-sale,orderlyemails-recommended-products,out-of-stock,sale,whats-new'|split:',' %}{% if collection and collection.all_products_count > 1 %}{% unless arps contains collection.handle %}{% assign arpc=collection %}{% endunless %}{% endif %}{% unless arpc %}{% for c in product.collections %}{% unless arps contains c.handle or c.all_products_count < 2 %}{% assign arpc=c %}{% break %}{% endunless %}{% endfor %}{% endunless %} {% if arpc %} data-autopick-collection="{{ arpc.id }}" data-collection-products="{% for product in arpc.products limit:250 %}{{ product.id }},{% endfor %}" {% endif %}></div>